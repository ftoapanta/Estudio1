<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             BackgroundColor="Accent"
             x:Class="Estudio1.Views.MainView">
    <ContentPage.Content>
        <StackLayout Padding="30,20,10,20">
            <Label 
                Text="Estudio1 Cambio Divisas"
                TextColor="Blue"
                FontSize="Large"
                FontAttributes="Bold"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Monto:" />
            <Entry Placeholder="Ingrese monto a convertir"/>
            <Label Text="Moneda Origen:" />
            <Picker Title="Seleccione la Moneda Origen"/>
            <Label Text="Moneda Destino:" />
            <Picker Title="Seleccione la Moneda Destino"/>
            <ActivityIndicator></ActivityIndicator>
            <Button
                Text="Convertir"
                BackgroundColor="Navy"
                TextColor="White"
                FontAttributes="Bold"
                BorderRadius="25"
                HeightRequest="50">
            </Button>
            <Label
                Text="Cargando"
                VerticalTextAlignment="Center"
                VerticalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                Margin="0,10"
                FontSize="Large"
                BackgroundColor="Silver">
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>